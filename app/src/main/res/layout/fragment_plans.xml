<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        android:contentDescription="@null" />

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.PlansFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading_animation"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_centerInParent="true"
        app:lottie_rawRes="@raw/hand"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:visibility="gone" />

<ScrollView
    android:layout_width="match_parent"
    android:id="@+id/fragment_content"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/myWorkoutsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Workouts"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_workout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_add"
            app:layout_constraintBottom_toBottomOf="@id/exerciseRecyclerView"
            app:layout_constraintEnd_toEndOf="@id/exerciseRecyclerView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/exerciseRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myWorkoutsTitle"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/exerciseRecyclerViewEmptyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No workouts, please create one"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myWorkoutsTitle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/generateWorkout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Generate Workout"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/exerciseRecyclerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.MaterialComponents.Button"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/generatedWorkoutRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/generateWorkout"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/generatedWorkoutRecyclerViewEmptyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No generated workouts"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/generateWorkout" />

        <TextView
            android:id="@+id/communityWorkoutsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Community Workouts"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/generatedWorkoutRecyclerView"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/communityWorkoutsRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/communityWorkoutsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/communityWorkoutsRecyclerViewEmptyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No community workouts"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/communityWorkoutsTitle" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/communityWorkoutsRecyclerViewEmptyText"
            android:text="exe"
            android:id="@+id/exe_btn"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

    </RelativeLayout>
</FrameLayout>