    <RelativeLayout
        android:id="@+id/fragment_content"
        android:layout_width="401dp"
        android:layout_height="721dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp">

        <View
            android:id="@+id/backgroundViewTop"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:layout_weight="4"
            android:background="@drawable/home_background" />

        <View
            android:id="@+id/backgroundViewBottom"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentBottom="true"
            android:scaleY="-1"
            android:layout_weight="4"
            android:background="@drawable/home_background"/>

        <TextView
            android:id="@+id/fitnessLevelTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Fitness Level"
            android:textStyle="bold"
            android:layout_alignParentTop="true" />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/fitnessLevelProgress"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"
            app:cpb_background_progressbar_color="@color/purple"
            app:cpb_background_progressbar_width="4dp"
            app:cpb_progress="0"
            app:cpb_progress_direction="to_right"
            app:cpb_progress_max="100"
            app:cpb_progressbar_width="8dp"
            app:cpb_round_border="true"
            app:cpb_start_angle="270"
            android:background="@color/white"
            android:layout_below="@id/fitnessLevelTitle"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/progressPercentage"
            android:layout_width="47dp"
            android:layout_height="40dp"
            android:layout_alignTop="@id/fitnessLevelProgress"
            android:layout_alignEnd="@id/fitnessLevelProgress"
            android:layout_alignBottom="@id/fitnessLevelProgress"
            android:layout_marginStart="-54dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/fitnessLevelProgress"
            android:text="0%"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:layout_below="@id/fitnessLevelProgress"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/recentSessionsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Recent Sessions"
            android:textStyle="bold"
            android:layout_below="@id/calendarView"
            android:layout_alignParentStart="true" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recentSessionsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/recentSessionsTitle" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addWorkoutFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="#FE0000"
            android:src="@drawable/ic_add"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>
