<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.mykotlinapps.bodybuilder.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_homeFragment_to_analyticsFragment"
            app:destination="@id/analyticsFragment" />
    </fragment>

    <fragment
        android:id="@+id/addItemFragment"
        android:name="com.mykotlinapps.bodybuilder.ui.add_character.AddItemFragment"
        android:label="Add Item">
        <action
            android:id="@+id/action_addItemFragment_to_allItemsFragment"
            app:destination="@id/action_addItemFragment_to_allItemsFragment"/>

    </fragment>

    <fragment
        android:id="@+id/allItemsFragment"
        android:name="com.mykotlinapps.bodybuilder.ui.all_character.AllItemsFragment"
        android:label="All Items">
        <action
            android:id="@+id/action_allItemsFragment_to_addItemFragment"
            app:destination="@id/action_allItemsFragment_to_addItemFragment"/>

        <action
            android:id="@+id/action_allItemsFragment_to_detailItemFragment"
            app:destination="@id/action_allItemsFragment_to_detailItemFragment"/>

    </fragment>


    <fragment
        android:id="@+id/analyticsFragment"
        android:name="com.mykotlinapps.bodybuilder.AnalyticsFragment"
        android:label="Analytics" />

    <fragment
        android:id="@+id/workoutPlansFragment"
        android:name="com.mykotlinapps.bodybuilder.WorkoutPlansFragment"
        android:label="Workout Plans" />

    <fragment
        android:id="@+id/workoutFragment"
        android:name="com.mykotlinapps.bodybuilder.WorkoutFragment"
        android:label="Workout" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.mykotlinapps.bodybuilder.SettingsFragment"
        android:label="Settings" />
</navigation>